// with(LayerX){ <statements> }
//---------------------------------------------------------------------------------------------
Stmt block_statement = 
  LAYER_ACTIVATION LPAREN  argument_list.p  RPAREN statement_no_short_if.s
  {: return new LayerActivation(p, new Block(new List<Stmt>().add(s)), true); :};


